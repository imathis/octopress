<IfModule mod_rewrite.c>
# 20110808 - reviewed and kept
# block Microsoft referer spam 2010-01-05 from http://www.the-art-of-web.com/system/logs-bing/
RewriteCond %{REMOTE_ADDR} ^65\.55\.(104|107|109|110|165|232)
RewriteCond %{HTTP_REFERER} (www\.bing|search\.live)\.com
RewriteCond %{HTTP_REFERER} !\&
RewriteRule .* - [F]
</IfModule>
